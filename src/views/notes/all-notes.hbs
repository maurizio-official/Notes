<div class="row">
	{{#each notes}}
	<div class="col-md-3">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title d-flex justify-content-between align-items-center">
					{{ title }} <a href="/notes/edit/{{_id}}">edit</a>
				</h4>
				<p>{{ description }}</p>
				<form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
					<input type="hidden" name="_method" value="DELETE">
					<div class="mb-3 d-grid gap-2">
						<button class="btn btn-danger btn-sm" type="submit">
							Delete
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
	{{else}}
	<div class="card mx-3">
		<div class="card-body">
			<h1>Hello {{ user.name }}</h1>
			<p class="lead">There are not notes yet.</p>
			<div class="mb-3 d-grid gap-2">
				<a href="/notes/add" class="btn btn-success">Create One!</a>
			</div>
		</div>
	</div>
	{{/each}}
</div>